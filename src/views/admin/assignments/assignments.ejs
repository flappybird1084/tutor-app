<%- include('../../header.ejs') %>
<div class="container">
  <h1>Assignment Templates</h1>
  <a href="/admin/assignments/create">Create Assignment</a>
  <br />
  <br />
  <!-- Assignment list will be displayed here -->
  <table border="1">
    <tr>
      <th>Action</th>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Due Date</th>
    </tr>
    <% assignments.forEach(assignment=> { %>
    <tr>
      <td>
        <a href="/admin/assignments/edit/<%= assignment._id %>">Edit</a>
        |
        <a href="/admin/assignments/delete/<%= assignment._id %>">Delete</a>
      </td>
      <td><%= assignment._id %></td>
      <td><%= assignment.title %></td>
      <td><%= assignment.description %></td>
      <td><%= assignment.due_date %></td>
    </tr>
    <% }); %>
  </table>
</div>
