<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
      }

      div {
        margin-top: 30px;
      }

      h1 {
        color: #333;
      }

      a {
        color: #007bff;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      div.header {
        margin-top: 10px;
        font-size: 18px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .control {
        display: flex;
        gap: 20px;
        position: relative;
      }

      .tooltip {
        position: relative;
        right: 0;
        top: 100%;
        background-color: #fff;
        border: 1px solid #ccc;
        padding: 5px;
        z-index: 1000;
      }

      #logged-in-user {
        text-decoration: underline;
        cursor: pointer;
      }
    </style>
    <link rel="stylesheet" href="/index.css" />
    <script src="https://unpkg.com/htmx.org@1.9.6"></script>
  </head>

  <body>
    <div class="header">
      <div class="left">
        <a href="/">Home</a>
        <% if (user) { %>
        <a href="/studentpage" style="margin-left: 30px">Student Page</a>
        <% if (user.role === 'admin') { %>
        <a href="/admin/mainpage" style="margin-left: 30px">Admin Page</a>
        <% } %> <% } %>
      </div>
      <div class="control">
        <a href="/auth/login">Login</a>
        <a href="/auth/register">Register</a>
        <% if(user) { %>
        <p
          id="logged-in-user"
          hx-get="/profile/tooltip"
          hx-target="next .tooltip-container"
          hx-swap="innerHTML"
          hx-trigger="click"
        >
          Welcome, <%= user.username %>
        </p>
        <div class="tooltip-container"></div>
        <% } %>
      </div>
    </div>

    <script>
      // Close tooltip when clicking anywhere else
      document.body.addEventListener('click', function(e) {
        if (!e.target.closest('#logged-in-user') {
          const tooltips = document.querySelectorAll('.tooltip-container');
          tooltips.forEach(el => el.innerHTML = '');
        }
      });
    </script>
  </body>
</html>
